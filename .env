# URL до бази даних (SQLite або PostgreSQL)
DATABASE_URL=sqlite:///mailer.db

# URL до Redis-брокера для Celery
REDIS_BROKER_URL=redis://redis:6379/0

# Як часто запускати розсилку (у секундах)
SEND_EVERY_SECONDS=60

# Розмір однієї пачки листів
BATCH_SIZE=10

# Денний ліміт листів на один Gmail-акаунт
GMAIL_DAILY_LIMIT=500