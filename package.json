    "express": "^4.18.2",
    "googleapis": "^150.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/papaparse": "^5.3.14",
